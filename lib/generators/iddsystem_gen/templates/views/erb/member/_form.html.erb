<%= form_for :registration_members, url: registration_members_path, method: :post, html: {id: 'registration_members'} do |f|%>
  <div class="form-group">
    <%= f.label :name1, "Username"%>
    <%= f.text_field :name1, id: 'name1'%>
  </div>
  <div class="form-group">
    <%= f.label :bp_email, "E-Mail" %>
    <%= f.email_field :bp_email, id: "bp_email" %>
  </div>
  <div class="form-group">
    <%= f.label :password, "Password"%>
    <%= f.password_field :password, id: "password"%>
  </div>
  <div class="form-group">
    <%= f.label :confirm_password, "Password Confirmation"%>
    <%= f.password_field :confirm_password, id: "confirm_password" %>
  </div>
  <%= f.button :submit %>
<% end %>